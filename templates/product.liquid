{{ 'product.css' | asset_url | stylesheet_tag }}

{{ 'product-responsive.css' | asset_url | stylesheet_tag }}

{% assign product = product %}

<div class="container">
  <div class="container-main">
    <div
      class="container-image container-image__desktop"
      style="background-image: url('{{ product.featured_image.src | img_url: '1024x1024' }}')"
    ></div>

    <img
      class="container-image container-image__mobile"
      src="{{ product.featured_image.src | img_url: '1024x1024' }}"
    >

    <div class="container-details">
      <p class="container-details__title">{{ product.title }}</p>

      <div class="container-details__ratings-reviews">
        <div class="ratings">
          <img
            src="https://res.cloudinary.com/olamileke/image/upload/v1687615636/backmeup_dev/Path_fizo1r.svg"
          >
          <img
            src="https://res.cloudinary.com/olamileke/image/upload/v1687615636/backmeup_dev/Path_fizo1r.svg"
          >
          <img
            src="https://res.cloudinary.com/olamileke/image/upload/v1687615636/backmeup_dev/Path_fizo1r.svg"
          >
          <img
            src="https://res.cloudinary.com/olamileke/image/upload/v1687615636/backmeup_dev/Path_fizo1r.svg"
          >
          <img
            src="https://res.cloudinary.com/olamileke/image/upload/v1687615636/backmeup_dev/Path_fizo1r.svg"
          >
        </div>

        <p class="reviews">3054 reviews</p>
      </div>

      <div class="container-details__description">
        {{ product.description }}
      </div>

      <div class="container-details__subscription">
        <div class="header" style="background: {{ product.metafields.details.color }}">
          <div class="name">
            <p>Subscription</p>
            <span>30% OFF</span>
          </div>

          <div class="price">
            <s>{{ product.compare_at_price_max | money }}</s>
            <p>{{ product.price | money }}</p>
          </div>
        </div>

        <div class="body">
          <div class="offerings-parent">
            <div class="offerings">
              <div class="offering">
                <div class="check" style="background: {{ product.metafields.details.color }}">
                  <img src="https://res.cloudinary.com/olamileke/image/upload/v1688005678/backmeup_dev/check_yqt5sf.svg">
                </div>
                <p>24/7 video vet support</p>
              </div>

              <div class="offering">
                <div class="check" style="background: {{ product.metafields.details.color }}">
                  <img src="https://res.cloudinary.com/olamileke/image/upload/v1688005678/backmeup_dev/check_yqt5sf.svg">
                </div>
                <p>Health tracking and recommendations</p>
              </div>

              <div class="offering">
                <div class="check" style="background: {{ product.metafields.details.color }}">
                  <img src="https://res.cloudinary.com/olamileke/image/upload/v1688005678/backmeup_dev/check_yqt5sf.svg">
                </div>
                <p>AI assistant, personalised health insights and vet tips</p>
              </div>
            </div>
            <div class="offerings">
              <div class="offering">
                <div class="check" style="background: {{ product.metafields.details.color }}">
                  <img src="https://res.cloudinary.com/olamileke/image/upload/v1688005678/backmeup_dev/check_yqt5sf.svg">
                </div>
                <p>
                  30% off first order, <br>
                  then 20% off for life
                </p>
              </div>
              <div class="offering">
                <div class="check" style="background: {{ product.metafields.details.color }}">
                  <img src="https://res.cloudinary.com/olamileke/image/upload/v1688005678/backmeup_dev/check_yqt5sf.svg">
                </div>
                <p>Free delivery monthly and exclusive rewards</p>
              </div>
              <div class="offering">
                <div class="check" style="background: {{ product.metafields.details.color }}">
                  <img src="https://res.cloudinary.com/olamileke/image/upload/v1688005678/backmeup_dev/check_yqt5sf.svg">
                </div>
                <p>100% money back guarantee</p>
              </div>
            </div>
          </div>
          <div class="subscribe-info">
            <button>
              <p>Subscribe</p>
              <span></span>
              <p class="price">{{ product.price | money }}</p>
            </button>
            <div>
              <p>After first order you will pay {{ product.compare_at_price_max | money }}/month.</p>
              <p>Cancel, pause or change anytime.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% section 'product-recommendations' %}
</div>
